<h1 class="mt-2 mb-4"><%= @category.store.name %><small> - <%= @category.name %></small></h1>

<%= form_for :item do |f| %>
  <div class="col-8 p-0">
    <%= render 'shared/errors', obj: @item %>
    <div class="form-group row ">
      <div class="form-group col-8">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control' %>
      </div>
      <div class="form-group col-4">
        <%= f.label :price %>
        <%= f.number_field :price,  autofocus: true, autocomplete: 'price', class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit class: 'btn bg-dark-gray text-yellow' %> 
    </div>
  </div>
<% end %>

<%= link_to '[Cancel and go back]', "/new_item/#{@category.id}" %>