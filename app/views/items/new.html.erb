<h1  class="mt-2 mb-4"><%= link_to @category.store.name, store_path(@category.store), class: 'link' %><small> - <%= @category.name %></small></h1>

<% if current_user.admin %>
  <h3>Add new items</h3>
  <%= form_for @item, url: items_path do |f| %>
    <div class="col-8 ps-0">
      <%= render 'shared/errors', obj: @item %>
      <div class="form-group row ">
        <div class="form-group col-8">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control' %>
        </div>
        <div class="form-group col-4">
          <%= f.label :price %>
          <%= f.number_field :price, autofocus: true, autocomplete: 'price', class: 'form-control' %>
        </div>
        <%= f.hidden_field :category_id, value: @category.id, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn bg-dark-gray text-yellow' %> 
      </div>
    </div>
  <% end %>
<% end %>

<div class="row mt-5">
  <div class="col-8">
    <% if !@category.items.empty? %>
      <%= render 'items' %>
    <% end %>
  </div>
</div>

<%= link_to '[Cancel and go back to home]', root_path%>
