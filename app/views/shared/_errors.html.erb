<% if obj.errors.any? %> 
    <div class="alert alert-danger alert-dismissible fade show py-0 px-2" role="alert">
        <h4 class="alert heading my-0 pb-2">The following errors prevented the <%= obj.class.name.downcase %> from being saved</h4> 
        <ul class="mx-2"> 
        <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li> 
        <% end %> 
        </ul>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
      </button>
    </div>
    
<% end %>


