<div class="row">
  <div class="col-8">
    <%= form_with model: @store, local: true do |f| %>
      <%= render 'shared/errors', obj: @store%>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %> 
      </div>
      
    <% end %>   
  </div>
</div>