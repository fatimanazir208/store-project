<h1 class="mt-2 mb-4">Stores</h1>

<div class="row mx-auto mt-3">
  <% @stores.each do |store| %>
    <div class="card text-center col-2 p-3 m-3">
      <div class="card-body p-0">
        <h5 class="card-title"><%= link_to store.name, store_path(store), class:'link' %></h5>
        <% if current_user.admin %>
          <%= link_to 'Edit', edit_store_path(store), class:"btn btn-sm btn-success" %>
          <%= link_to 'Delete', store_path(store), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-sm btn-danger' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>




