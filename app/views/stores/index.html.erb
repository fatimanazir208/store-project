<h1 class="mt-2 mb-4">Stores</h1>

<div class="row mx-auto mt-3">
  <% @stores.each do |store| %>
    <div class="card text-center col-2 p-3 m-3">
      <div class="card-body p-0">
        <h5 class="card-title m-0 px-0 py-2"><%= link_to store.name, store_path(store: store), class:'link' %></h5>
      </div>
    </div>
  <% end %>
</div>




